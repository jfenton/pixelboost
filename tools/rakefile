task :default => 'tools:build' do
end

namespace :tools do
  puts Rake.application.original_dir
  rakeLocation = File.dirname __FILE__  
  puts rakeLocation
    task :build => [:svgparser, :hullgenerator, :modelconvertor] do
    end

    binDir = File.join rakeLocation, 'bin/'
    directory binDir
    task :svgparser => binDir do
      parserDir = File.join rakeLocation, 'svgparser/osx/svgparser'
      Dir.chdir parserDir do
        system 'xcodebuild ONLY_ACTIVE_ARCH=NO CONFIGURATION_BUILD_DIR="build/Release" -scheme svgparser -arch i386 -configuration Release'
      end
      releaseDir = File.join parserDir, 'build/Release/svgparser'      
      cp releaseDir, binDir
    end
    
    task :hullgenerator => binDir do
      parserDir = File.join rakeLocation, 'hullgenerator/osx/hullgenerator'
      Dir.chdir parserDir do
        system 'xcodebuild ONLY_ACTIVE_ARCH=NO CONFIGURATION_BUILD_DIR="build/Release" -scheme hullgenerator -arch i386 -configuration Release'
      end
      releaseDir = File.join parserDir, 'build/Release/hullgenerator'      
      cp releaseDir, binDir
    end

    task :modelconvertor => binDir do
      parserDir = File.join rakeLocation, 'modelconvertor/osx/modelconvertor'
      Dir.chdir parserDir do
        system 'xcodebuild ONLY_ACTIVE_ARCH=NO CONFIGURATION_BUILD_DIR="build/Release" -scheme modelconvertor -arch i386 -configuration Release'
      end
      releaseDir = File.join parserDir, 'build/Release/modelconvertor'      
      cp releaseDir, binDir
    end
end
